{
  "$schema": "./../component.schema.json",
  "name": "BFlex",
  "description": "gap accepts a string, so it could be used as a shorthand for row-gap and column-gap.",
  "props": [
    {
      "name": "direction",
      "type": [
        "String"
      ],
      "default": "row",
      "allowedValues": [
        "row",
        "column",
        "row-reverse",
        "column-reverse"
      ]
    },
    {
      "name": "justify",
      "type": [
        "String"
      ],
      "default": "flex-start",
      "allowedValues": [
        "flex-start",
        "flex-end",
        "center",
        "space-between",
        "space-around",
        "space-evenly"
      ]
    },
    {
      "name": "align",
      "type": [
        "String"
      ],
      "default": "stretch",
      "allowedValues": [
        "stretch",
        "flex-start",
        "flex-end",
        "center",
        "baseline"
      ]
    },
    {
      "name": "gap",
      "type": [
        "String"
      ],
      "default": "undefined"
    }
  ],
  "slots": [
    {
      "name": "default"
    }
  ]
}
