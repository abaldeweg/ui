{
  "$schema": "./../component.schema.json",
  "name": "BFlex",
  "props": [
    {
      "name": "direction",
      "type": [
        "String"
      ],
      "allowedValues": [
        "row",
        "column",
        "row-reverse",
        "column-reverse"
      ],
      "default": "row"
    },
    {
      "name": "justify",
      "type": [
        "String"
      ],
      "allowedValues": [
        "flex-start",
        "flex-end",
        "center",
        "space-between",
        "space-around",
        "space-evenly"
      ],
      "default": "flex-start"
    },
    {
      "name": "align",
      "type": [
        "String"
      ],
      "allowedValues": [
        "stretch",
        "flex-start",
        "flex-end",
        "center",
        "baseline"
      ],
      "default": "stretch"
    },
    {
      "name": "gap",
      "description": "Accepts a string, so it could be used as a shorthand for row-gap and column-gap.",
      "type": [
        "String"
      ],
      "default": "undefined",
      "example": "20px"
    }
  ],
  "slots": [
    {
      "name": "default"
    }
  ]
}
