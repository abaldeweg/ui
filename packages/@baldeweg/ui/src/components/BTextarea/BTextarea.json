{
  "$schema": "./../component.schema.json",
  "name": "BTextarea",
  "description": "Additional attributes are passed to the underlying input element.",
  "props": [
    {
      "name": "modelValue",
      "type": [
        "String",
        "Number"
      ],
      "example": "Content"
    },
    {
      "name": "type",
      "description": "https://developer.mozilla.org/en-US/docs/Web/HTML/Element/input#attributes",
      "type": [
        "String"
      ],
      "default": "text",
      "allowedValues": [
        "date",
        "color",
        "datetime-local",
        "email",
        "month",
        "number",
        "password",
        "range",
        "search",
        "tel",
        "text",
        "time",
        "url",
        "week"
      ]
    },
    {
      "name": "name",
      "type": [
        "String"
      ],
      "example": "input-name"
    },
    {
      "name": "id",
      "type": [
        "String"
      ],
      "example": "input-id"
    },
    {
      "name": "label",
      "type": [
        "String"
      ],
      "example": "Label"
    },
    {
      "name": "hide-label",
      "type": [
        "Boolean"
      ],
      "default": false
    },
    {
      "name": "help",
      "type": [
        "String"
      ],
      "example": "Help text"
    }
  ],
  "events": [
    {
      "name": "update:modelValue"
    }
  ]
}
