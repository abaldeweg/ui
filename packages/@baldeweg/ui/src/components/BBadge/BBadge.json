{
  "$schema": "./../component.schema.json",
  "name": "BBadge",
  "props": [
    {
      "name": "variant",
      "type": [
        "String"
      ],
      "allowedValues": [
        "none",
        "inline",
        "superscript"
      ],
      "default": "none"
    },
    {
      "name": "position",
      "type": [
        "String"
      ],
      "default": "right",
      "allowedValues": [
        "left",
        "right"
      ]
    },
    {
      "name": "background",
      "type": [
        "String"
      ],
      "allowedValues": [
        "none",
        "primary",
        "neutral"
      ],
      "default": "none"
    },
    {
      "name": "content",
      "type": [
        "String",
        "Number"
      ],
      "example": 1
    },
    {
      "name": "hideEmpty",
      "type": [
        "Boolean"
      ],
      "default": false
    }
  ],
  "slots": [
    {
      "name": "icon"
    },
    {
      "name": "default"
    },
    {
      "name": "action"
    }
  ]
}
