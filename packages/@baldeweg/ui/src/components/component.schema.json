{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "component.schema.json",
  "title": "Component",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "props": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "type": {
            "type": "array",
            "items": {
              "enum": [
                "String",
                "Number",
                "Boolean",
                "Array",
                "Object",
                "Date",
                "Function",
                "Symbol"
              ]
            }
          },
          "allowedValues": {
            "type": "array",
            "items": {
              "type": "string",
              "uniqueItems": true
            }
          },
          "default": {
            "type": [
              "string",
              "boolean"
            ]
          }
        },
        "required": [
          "name",
          "type"
        ]
      }
    },
    "slots": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "default": "default"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "default": "click"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "required": [
      "name"
    ]
  }
}
