{
  "$schema": "./../component.schema.json",
  "name": "BEditor",
  "description": "Additional attributes are passed to the underlying editor.",
  "props": [
    {
      "name": "modelValue",
      "type": [
        "String"
      ]
    },
    {
      "name": "name",
      "type": [
        "String"
      ]
    },
    {
      "name": "id",
      "type": [
        "String"
      ]
    },
    {
      "name": "label",
      "type": [
        "String"
      ]
    },
    {
      "name": "hideLabel",
      "type": [
        "Boolean"
      ],
      "default": false
    },
    {
      "name": "help",
      "type": [
        "String"
      ]
    },
    {
      "name": "language",
      "type": [
        "String"
      ],
      "default": "json"
    }
  ],
  "events": [
    {
      "name": "update:modelValue"
    }
  ]
}
